<h2>Edit Receipt</h2>
<div class="container">
<%= form_for @receipt,url:receipt_path(@receipt.id) do |f|%>
 <div class="row">
  <div class="col-md-12">
    <%=f.number_field :payment,placeholder:'金額'%>
    <%=f.text_field :p_date,class:'date-picker',placeholder:'日付'%>
    <%=f.text_field :memo,placeholder:'メモ'%>
  </div>
  <% @types.each do |r|%>
    <div class="col-xs-12 col-md-6">
    <%= f.radio_button :type_id,r.id ,{id:r.id} %>
          <label for=<%= "#{r.id}" %> class="btn btn-block btn-success" style="height:3em;padding-top:0.7em;">
           <small><%="#{r.title}" %></small>
          </label>
   </div>
  <% end %>
 </div>
 <div style="margin:15px 0px;">
    <%= f.submit "入力",class:"btn btn-success btn-lg btn-block" %>
 </div>
<% end %>
</div>